@using System.Collections
@model IEnumerable<HoldIt.Models.Listing>
    

@if ((Session["userIsAuthenticated"] != null) && ((bool) Session["userIsAuthenticated"] == true) )
{
    <p>
        @Html.ActionLink("Create New", "User/Create")
    </p>
}
<table class="table">
    <tr>
        <th>Date Time</th>
        <th>Cost </th>
        <th>Title</th>
        <th>Description</th>
        <th>Location</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.datetime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cost)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.location)
        </td>
        <td>
            
            @if ((Session["userIsAuthenticated"] != null) && ((bool)Session["userIsAuthenticated"] == true) && (item.customerID < 0))
            {
                <a href="Book" class="btn active" role="button" aria-pressed="true"  asp-controller="Home" asp-action="Book" asp-route-yourparam0=@item.ListingID >Book</a>

                @Html.ActionLink("Book","Book","User",null, new{ first=item.ListingID})
            }
        </td>
    </tr>
}

</table>
