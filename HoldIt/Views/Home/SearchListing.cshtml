@using System.Activities
@model IEnumerable<HoldIt.Models.Listing>


@if ((Session["userIsAuthenticated"] != null) && ((bool) Session["userIsAuthenticated"] == true))
{
    <p>
        @Html.ActionLink("Create New", "CreateListing", "User")
    </p>
}
<table class="table">
    <tr>
        <th>Title</th>
        <th>Description </th>
        <th>Location </th>
        <th>Datetime </th>
        <th>Cost     </th>
        
            @if ((Session["userIsAuthenticated"] != null) && ((bool) Session["userIsAuthenticated"] == true))
            {
                <th> Book Listing</th>
            }
      <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.datetime)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.cost)
        </td>



        <td>
            @if ((Session["userIsAuthenticated"] != null) && ((bool) Session["userIsAuthenticated"] == true) && (item.customerID < 0) )
            {
                @Html.ActionLink("Book", "Book", "User", new {@first = item.ListingID}, null)
            }
        </td>
    </tr>
}

</table>
