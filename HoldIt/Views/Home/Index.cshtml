@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron text-center">
    <h1>HoldIt</h1>
    <p class="lead">Spot holding service</p>
    <p>blah, blah, blah....</p>
</div>

<div class="row text-center">
    <div class="col-md-4">
        <h2>Getting started</h2>
        <p>
            Search for an event! Chances are, somebody's already going and planning on holding a spot for it. Skip the line, save the time!
        </p>
        <form class="navbar-form navbar-right">
            <div class="form-group">
                <input type="text" placeholder="which event?" class="form-control">
            </div>
            <button type="submit" class="btn btn-success">"@Url.Action("SearchListing", "Home")"</button>
        </form>
    </div>
    <div class="col-md-4">
        <h2>Looking to make some money?</h2>
        <p>Sign up today to hold somebody's spot in line! You get to choose your own price and your own hours!</p>
        <form class="navbar-form navbar-right">
            <div class="form-group">
                <input type="text" name="name" placeholder="name" class="form-control mb" />
                <input type="email" name="email" placeholder="email" class="form-control mb" />
                <input type="password" name="password" placeholder="choose a password" class="form-control mb" />
                <input type="password" name="passwordConfirm" placeholder="confirm your password" class="form-control mb" />
            </div>
            <button type="submit" formaction="@Url.Action("Signup", "User")" formmethod="post" class="btn btn-success">Sign me up!</button>
        </form>
    </div>
    <div class="col-md-4">
        <h2>Just browsing?</h2>
        <p>Scroll down to see who's holding a spot in your area!</p>
    </div>
    <div class="col-lg-12">

    </div>
</div>